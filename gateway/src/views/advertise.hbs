<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>FlixTube: Advertise</title>
        <link rel="stylesheet" href="css/tailwind.min.css">
        <link rel="stylesheet" href="css/app.css">
    </head>
    <body>
        <div class="flex flex-col">
            <div class="border-b-2 bg-gray-100">
                <div class="nav flex flex-row items-center mt-1 p-2">
                    <div class="text-xl font-bold">FlixTube</div>
                    <div class="ml-16"><a href="/">Videos</a></div>
                    <div class="ml-4"><a href="/upload">Upload</a></div>
                    <div class="ml-4"><a href="/history">History</a></div>
                    <div class="ml-4 border-b-2 border-blue-600">
                        <a href="/advertise">Advertise</a>
                    </div>
                </div>
            </div>
            
            <div class="m-4">
                <h1 class="text-2xl font-bold mb-4">Advertise</h1>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    {{#if images}}
                        {{#each images}}
                            <div class="border p-4 rounded-lg shadow-md bg-white">
                                <img src="{{this.imageUrl}}" class="w-full h-40 object-cover mb-2 rounded">
                                <a href="{{this.url}}" class="text-blue-600 font-semibold" target="_blank">Visit {{this.url}}</a>
                            </div>
                        {{/each}}
                    {{else}}
                        <div class="border p-4 rounded-lg shadow-md bg-white">
                            <p>No advertisements available.</p>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </body>
</html>
